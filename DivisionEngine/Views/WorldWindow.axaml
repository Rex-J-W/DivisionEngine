<local:EditorWindow xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:DivisionEngine.Editor"
                    xmlns:vm="using:DivisionEngine.Editor.ViewModels"
                    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                    x:Class="DivisionEngine.Editor.WorldWindow"
                    x:DataType="vm:WorldWindowViewModel">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top">
      <StackPanel.Styles>
        <Style Selector="StackPanel">
          <Setter Property="Background" Value="#444"/>
          <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
      </StackPanel.Styles>

      <TextBlock Text="Test"></TextBlock>
    </StackPanel>
    
    <Panel x:Name="RenderVisualizerFrame"/>
  </DockPanel>

</local:EditorWindow>
